             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.Samples.Kinect.DiscreteGestureBasics"
             mc:Ignorable="d" 
             d:DesignHeight="948" d:DesignWidth="1372">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </UserControl.Resources>

    <Grid Width="1372" Height="948">
        <TextBlock Name="direction_output" Text="" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" FontSize="30" Foreground="Red" Panel.ZIndex="10000"></TextBlock>
        <Canvas Width="1372" Height="948" Name="mainScreen" Background="Transparent" Grid.Column="0" Grid.Row="0"  />
    </Grid>
</UserControl>
